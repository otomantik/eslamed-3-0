{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["../apps/web/node_modules/@types", "../node_modules/@types", "node_modules/@types"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}

